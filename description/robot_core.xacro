<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
    <xacro:include filename="inertial_macro.xacro"/> <!-- Added closing tag here -->


<!-- BASE LINK -->
    <link name='base_link'>
    
    </link>

<!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link ="chassis"/>
        <origin xyz="-0.09 0 0"/>
    </joint>

    <link name='chassis'>
        <visual>
            <origin xyz="0.15 0 0.1045"/>
            <geometry>
                <box size="0.3 0.25 0.209"/>
            </geometry>
            <material name='white'/>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.1045"/>
            <geometry>
                <box size="0.3 0.25 0.209"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1" x="0.3" y="0.25" z="0.15">
            <origin xyz="0.15 0 0.077" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>


<!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link ="left_wheel"/>
        <origin xyz="0 0.125 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name='left_wheel'>
        <visual>
            <geometry>
                <cylinder radius="0.0335" length="0.026"/>
            </geometry>
            <material name='blue'/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0335" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.026" radius="0.0335">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

<!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link ="right_wheel"/>
        <origin xyz="0 -0.125 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name='right_wheel'>
        <visual>
            <geometry>
                <cylinder radius="0.0335" length="0.026"/>
            </geometry>
            <material name='blue'/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0335" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.026" radius="0.0335">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

<!-- LEFT CASTER WHEEL LINK -->
    <joint name="left_caster_wheel_link" type="fixed">
        <parent link="chassis"/>
        <child link ="left_caster_wheel"/>
        <origin xyz="0.29 0.123 0"/>
    </joint>

    <link name='left_caster_wheel'>
        <visual>
            <geometry>
                <sphere radius="0.0335"/>
            </geometry>
            <material name='orange'/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0335"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0335">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="left_caster_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

<!-- RIGHT CASTER WHEEL LINK -->
    <joint name="right_caster_wheel_link" type="fixed">
        <parent link="chassis"/>
        <child link ="right_caster_wheel"/>
        <origin xyz="0.29 -0.123 0"/>
    </joint>

    <link name='right_caster_wheel'>
        <visual>
            <geometry>
                <sphere radius="0.0335"/>
            </geometry>
            <material name='orange'/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0335"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0335">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="right_caster_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>
